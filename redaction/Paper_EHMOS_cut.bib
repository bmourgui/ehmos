	author = {Mourguiart, Bastien and Couturier, Thibaut and Braud, Yoan and Mansons, Jérôme and Combrisson, Damien and Besnard, Aurélien},
	year = {2021},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/een.12991},
	keywords = {Hierarchical model, imperfect detection, orthoptera communities, sampling efficiency, sampling optimisation, species distribution modelling},
	pages = {163--174},
	file = {Full Text PDF:/home/bmourgui/snap/zotero-snap/common/Zotero/storage/KBM8N83T/Mourguiart et al. - 2021 - Multi-species occupancy models an effective and f.pdf:application/pdf;Snapshot:/home/bmourgui/snap/zotero-snap/common/Zotero/storage/UXCM45CB/een.html:text/html},
