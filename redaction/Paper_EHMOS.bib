	pages = {732--743},
	file = {Full Text PDF:/home/bmourgui/snap/zotero-snap/common/Zotero/storage/6ELXWALY/Pöyry et al. - 2009 - Species traits explain recent range shifts of Finn.pdf:application/pdf;Snapshot:/home/bmourgui/snap/zotero-snap/common/Zotero/storage/MWHXMAK7/j.1365-2486.2008.01789.html:text/html},
