	author = {McCain, Christy M. and King, Sarah R. B. and Szewczyk, Tim M.},
	year = {2021},
	note = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1002/ecy.3300},
	keywords = {climate change, range shifts, elevation, range contractions, rodents, shrews},
	pages = {e03300},
	file = {Snapshot:/home/bmourgui/snap/zotero-snap/common/Zotero/storage/G345UJK8/ecy.html:text/html;Full Text PDF:/home/bmourgui/snap/zotero-snap/common/Zotero/storage/UGP2XWGY/McCain et al. - 2021 - Unusually large upward shifts in cold-adapted, mon.pdf:application/pdf},
